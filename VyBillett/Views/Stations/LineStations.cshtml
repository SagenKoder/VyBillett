@model IEnumerable<Model.LineStation>

@{
    ViewBag.Title = "LineStations";
}

<h2>LineStations</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Minutes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Line.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Station.Name)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Minutes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Line.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Station.Name)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.LineStationId })
        </td>
    </tr>
}

</table>
