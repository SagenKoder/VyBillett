@model IEnumerable<Model.Line>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.LineId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.LineId }) |
                @Html.ActionLink("Avganger", "Index", "Departure", new { id = item.LineId }, null)
            </td>
        </tr>
    }
    @Html.ActionLink("Add", "Add", new { controller = "Lines"}, new { @class = "btn btn-outline-info" })
</table>
