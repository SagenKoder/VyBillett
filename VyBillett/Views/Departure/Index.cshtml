@model IEnumerable<Model.Departure>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>
@Html.ActionLink("Add", "Add", new { controller = "Departure" }, new { @class = "btn btn-outline-info", id = ViewBag.LineId })
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DateTime)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.DepartureId })
            </td>
        </tr>
    }

</table>


